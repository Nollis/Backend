@if (!User.Identity.IsAuthenticated)
{
        <p>Hello! Please login!</p>
}

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Citizen") && User.IsInRole("Admin"))
    {
                <p>Hello Citizen & Admin!</p>
    }
    else if (User.IsInRole("Citizen"))
    {
                <p>Hello Citizen!</p>
    }
    else if (User.IsInRole("Admin"))
    {
                <p>Hello Admin!</p>
    }
    else
    {
                <p>Hello logged in visitor!</p>
    }
}

