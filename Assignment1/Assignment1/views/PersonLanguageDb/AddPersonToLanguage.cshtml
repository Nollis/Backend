@{
    ViewData["Title"] = "AddPersonToLanguage";
}
@if (ViewBag.Message != null)
{
        <p>@ViewBag.Message</p>
}

<h1>Add language to person</h1>

<form asp-action="AddPersonToLanguage" method="post">
    <div class="form-group">
        <label>Person: </label>
        <select name="personid" class="form-control" asp-items="@ViewBag.People"></select>
    </div> <div class="form-group">
        <label>Language: </label>
        <select name="languageid" class="form-control" asp-items="@ViewBag.Languages"></select>
    </div>
    <input type="submit" value="Add language" class="btn btn-primary" />
</form>