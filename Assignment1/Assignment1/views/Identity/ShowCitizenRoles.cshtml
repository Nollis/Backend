@model UserRolesViewModel
@{
    ViewData["Title"] = "ShowCitizenRoles";
}

<h1>All roles for @Model.Name</h1>

<a asp-action="AddRoleToUser" class="btn btn-primary" asp-route-userId=@Model.UserId>Add role to citizen</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
                <tr>
                    <td>@role</td>
                    <td><a asp-action="RemoveRoleFromUser" asp-route-roleName=@role asp-route-userId=@Model.UserId class="btn btn-danger">Remove role from citizen</a></td>
                </tr>
        }
    </tbody>
</table>