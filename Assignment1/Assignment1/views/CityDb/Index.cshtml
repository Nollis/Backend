@model List<City>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Cities</h1>

<div><a class="btn btn-primary" asp-action="Create" class="btn">Create a new City</a></div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var city in Model)
        {
            <tr>
                <td>@city.Id</td>
                <td>@city.Name</td>
                <td><a asp-action="Delete" asp-controller="CityDB" asp-route-id=@city.Id class="btn btn-primary">Delete</a></td>
            </tr>
        }
    </tbody>
</table>