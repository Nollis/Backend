@model City
@{
    ViewData["Title"] = "Create";
}

<h1>Create a new city</h1>


<form asp-action="Create" asp-controller="CityDb" method="post">
    <div class="form-group">
        <label asp-for="CityName">City:</label>
        <input asp-for="CityName" />
    </div>
    <div class="form-group">
        <label>Country:</label>
        <select name="countryId" class="form-control" asp-items="@ViewBag.Countries"></select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
