@model List<Country>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() != 0) {
    <h1>Countries associated with @ViewBag.Name</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <tbody>
        @foreach(var country in Model) {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td><a asp-action="RemoveCountryfromPerson" class="btn" asp-route-personid=@ViewBag.PersonId asp-route-countryid=@country.Id>Remove Country from person</a></td>
            </tr>
        }
    </tbody>
}
else {
    <h1>@ViewBag.Name does not have a nationality yet.</h1>
}
