
@{
    ViewData["Title"] = "AddCountryToPerson";
}
@if(ViewBag.Message != null) {
    <p>@ViewBag.Message</p>
}

<h1>Add nationality to person</h1>

<form asp-action="AddCountryToPerson" method="post">
    <div class="form-group">
        <label>Person:</label>
        <select name="personId" class="form-control" asp-items="@ViewBag.People"></select>
    </div>
    <div class="form-group">
        <label>Country: </label>
        <select name="countryId" class="form-control" asp-items="@ViewBag.Countries"></select>
    </div>
    <input type="submit" value="Add" class="btn" />
</form>

