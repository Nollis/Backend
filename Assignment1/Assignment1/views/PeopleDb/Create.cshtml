@model Person
@{
    ViewData["Title"] = "Create";
}
@if (ViewBag.Message != null)
{
        <p>@ViewBag.Message</p>
}

<h1>Add a Person</h1>

<form asp-action="Create" asp-controller="PeopleDB" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" />
    </div>
    <div class="form-group">
        <label>City:</label>
        <select name="cityId" class="form-control" asp-items="@ViewBag.Cities"></select>
    </div>
    <br />
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
