@{
    ViewData["Title"] = "AddLanguageToCountry";
}
@if (ViewBag.Message != null)
{
        <p>@ViewBag.Message</p>
}

<h1>Add language to country</h1>

<form asp-action="AddLanguageToCountry" method="post">
    <div class="form-group">
        <label>Country: </label>
        <select name="countryid" class="form-control" asp-items="@ViewBag.Country"></select>
    </div> <div class="form-group">
        <label>Language: </label>
        <select name="languageid" class="form-control" asp-items="@ViewBag.Language"></select>
    </div>
    <input type="submit" value="Add language" class="btn btn-primary" />
</form>