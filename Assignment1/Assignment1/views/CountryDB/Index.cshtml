@model List<Country>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Countries</h1>

<div><a class="btn btn-primary" asp-action="Create" class=" btn">Add a Country</a></div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Country</th>
            <th>Cities</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
                <tr>
                    <td>@country.CountryId</td>
                    <td>@country.CountryName</td>
                    <td>
                        <ul>
                        @foreach (var item in country.Cities)
                        {
                            <li>@item.CityName</li>
                        }
                        </ul>
                    </td>
                    <td><a asp-action="Delete" asp-route-countryid=@country.CountryId class="btn btn-danger">Delete</a></td>
                </tr>
        }
    </tbody>
</table>