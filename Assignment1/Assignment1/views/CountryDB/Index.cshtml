@model List<Country>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Countries</h1>

<div><a class="btn btn-primary" asp-action="Create" class=" btn">Add a Country</a></div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
                <tr>
                    <td>@country.Id</td>
                    <td>@country.Name</td>
                    <td><a asp-action="Delete" asp-route-id=@country.Id class="btn btn-danger">Delete</a></td>
                </tr>
        }
    </tbody>
</table>