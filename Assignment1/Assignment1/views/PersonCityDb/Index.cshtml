@model List<City>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() != 0) {
    <h1>Cities associated with @ViewBag.Name</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th></th>
            </tr>
        </thead>
    </table>
    <tbody>
        @foreach(var city in Model) {
            <tr>
                <td>@city.CityId</td>
                <td>@city.CityName</td>
                <td><a class="btn btn-danger" asp-action="RemoveCityfromPerson" asp-route-personid=@ViewBag.PersonId asp-route-countryid=@city.CityId>Remove City from person</a></td>
            </tr>
        }
    </tbody>
}
else {
    <h1>@ViewBag.Name does not have a city yet.</h1>
}
