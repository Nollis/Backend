
@{
    ViewData["Title"] = "AddCityToPerson";
}
@if(ViewBag.Message != null) {
    <p>@ViewBag.Message</p>
}

<h1>Add City to person</h1>

<form asp-action="AddCityToPerson" method="post">
    <div class="form-group">
        <label>Person:</label>
        <select name="personId" class="form-control" asp-items="@ViewBag.People"></select>
    </div>
    <div class="form-group">
        <label>City: </label>
        <select name="cityId" class="form-control" asp-items="@ViewBag.Cities"></select>
    </div>
    <input type="submit" value="Add" class="btn" />
</form>

